    {
      "type": "digitalocean",
      "api_token": "{{user `do_api_token`}}",
      "image": "ubuntu-16-04-x64",
      "region": "nyc3",
      "size": "512mb"
    },
    {
      "type": "googlecompute",
      "account_file": "gcp.json",
      "project_id": "emerald-mission-151101",
      "source_image": "ubuntu-1604-xenial-v20161115",
      "zone": "us-central1-a",
      "ssh_username": "neilsarkar"
